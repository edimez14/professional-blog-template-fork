---
import Logo from "../components/Logo";
import Link from "../components/Link.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Text from "../components/Text.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-color-bg py-8 border-t border-color-border">
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="flex flex-col md:flex-row justify-between items-start gap-8 mb-10"
    >
      <div class="max-w-md">
        <div class="mb-6">
          <Logo client:load />
        </div>
        <Text
          variant="light"
          size="sm"
          className="text-color-muted leading-relaxed text-left"
        >
          Curating wisdom for the digital age. Bridging classical thought with
          modern challenges.
        </Text>
      </div>

      <div>
        <SocialLinks />
      </div>
    </div>

    <hr class="border-color-border my-8 opacity-50" />

    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="text-color-muted text-xs font-medium">
        &copy; {currentYear} Plantilla de <a
          href="https://aurea-web.com"
          target="_blank"
          class="hover:text-amber-300 hover:transition-colors">√Åurea Web</a
        >. Todos los derechos reservados.
      </div>

      <div class="flex gap-6">
        <Link
          href="/privacy"
          class="text-xs font-medium text-color-muted hover:text-gold uppercase tracking-wider transition-colors"
        >
          Privacy Policy
        </Link>
        <Link
          href="/terms"
          class="text-xs font-medium text-color-muted hover:text-gold uppercase tracking-wider transition-colors"
        >
          Terms of Service
        </Link>
        <Link
          href="/cookies"
          class="text-xs font-medium text-color-muted hover:text-gold uppercase tracking-wider transition-colors"
        >
          Cookie Policy
        </Link>
      </div>
    </div>
  </div>
</footer>
